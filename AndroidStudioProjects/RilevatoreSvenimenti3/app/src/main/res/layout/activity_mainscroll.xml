<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"

    android:layout_height="wrap_content" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bordo.rilevatoresvenimenti.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:text="SOS"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-40dp"
            android:background="#a60000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Svenimenti oggi : 0"
            android:id="@+id/textView"

            android:textSize="20dp"
            android:layout_marginTop="72dp"
            android:textAlignment="center"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Attivato in background"
            android:id="@+id/switch1"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:elegantTextHeight="false"
            android:nestedScrollingEnabled="false"
            android:theme="@style/Base.Animation.AppCompat.DropDownUp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Vibra quando svieni"
            android:id="@+id/switch2"
            android:layout_below="@+id/switch1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="true" />

    </RelativeLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Suona quando svieni"
        android:id="@+id/switch3"
        android:checked="true"
        android:enabled="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Impostazioni"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:enabled="true"
        android:textSize="20dp"
        android:elegantTextHeight="false"
        android:layout_below="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Statistiche"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="20dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/switch3"
        android:layout_alignRight="@+id/switch3"
        android:layout_alignEnd="@+id/switch3"
        android:layout_marginTop="50dp" />

</RelativeLayout>
</ScrollView>
