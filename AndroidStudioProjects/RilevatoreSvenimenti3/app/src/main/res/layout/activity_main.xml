<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bordo.rilevatoresvenimenti.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="SOS"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Svenimenti totali : N/D - Oggi : 0"
            android:id="@+id/textView"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Attivato in background"
            android:id="@+id/switch1"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:elegantTextHeight="false"
            android:nestedScrollingEnabled="false"
            android:theme="@style/Base.Animation.AppCompat.DropDownUp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Vibra quando svieni"
            android:id="@+id/switch2"
            android:layout_below="@+id/switch1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Suona quando svieni"
            android:id="@+id/switch3"
            android:checked="false"
            android:layout_below="@+id/switch2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:enabled="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Impostazioni"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:enabled="true"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Statistiche"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RelativeLayout>

</RelativeLayout>
